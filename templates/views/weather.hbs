<body>

    {{> navbar}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto ">
               
               <div class="main-content">
               <form class="temp_form">
                <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                <input type="submit" id="submitbtn" value="search">
               </form>
               </div>

               <div class="tempInfo">
                <div class="top_layer">
                    <p id="day">sunday</p>
                    <p id="today_date">29 March</p>
                </div>

                <div class="main_layer ">
                    <p id="city_name">Get Output here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                        <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                    </div>
                </div>
               </div>



            </div>
        </div>
    </div>

    <!-- Footer -->
    
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = ()=> {
              let weekday = new Array(7);
              weekday[0] = "Sunday";
              weekday[1] = "Monday";
              weekday[2] = "Tuesday";
              weekday[3] = "Wednesday";
              weekday[4] = "Thursday";
              weekday[5] = "Friday";
              weekday[6] = "Saturday";

              let currentTime = new Date;
              days = weekday[currentTime.getDay()]
              let day = document.getElementById('day')

              day.innerText = days;
        };

        getCurrentDay();


    const  getDateAndMonth = ()=>{
        let month = new Array(12);
        month[0] = "Jan"
        month[1] = "Feb"
        month[2] = "March"
        month[3] = "April"
        month[4] = "May"
        month[5] = "Jun"
        month[6] = "July"
        month[7] = "Aug"
        month[8] = "Sep"
        month[9] = "Oct"
        month[10] = "Nov"
        month[11] = "Dec"

        let currentTime = new Date;
        let date = currentTime.getDate();
        let months = month[currentTime.getMonth()];

        let today_date = document.getElementById('today_date');

        today_date.innerText = [date,months];
    }

    getDateAndMonth();
    </script>
</body>

</html>